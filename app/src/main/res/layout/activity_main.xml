<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_common_white_corner_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_self_info_top"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_22"
            android:text="和身边的朋友输入同样的数\n字，进入同一个群聊"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_123"
            android:background="@color/white">

            <com.hfs.custominputview.keybord.NumberInputView
                android:id="@+id/number_input_view_invite_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_95"
                android:layout_marginEnd="@dimen/dp_95" />
        </RelativeLayout>


    </LinearLayout>


    <com.hfs.custominputview.keybord.NumberKeyboardView
        android:id="@+id/number_keyboard_view_invite_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>